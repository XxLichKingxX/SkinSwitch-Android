<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.outadev.skinswitch"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="L"
        android:targetSdkVersion="L" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="fr.outadev.skinswitch.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fr.outadev.skinswitch.activities.MojangLoginActivity"
            android:label="@string/title_activity_mojang_login"
            android:theme="@style/DialogActivity"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="fr.outadev.skinswitch.activities.NewCustomSkinActivity"
            android:label="@string/title_activity_new_custom_skin" >
        </activity>
        <activity
            android:name="fr.outadev.skinswitch.activities.SkinLibraryActivity"
            android:label="@string/title_activity_skin_library" >
        </activity>
    </application>

</manifest>