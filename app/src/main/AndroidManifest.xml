<?xml version="1.0" encoding="utf-8"?>
<manifest
	package="fr.outadev.skinswitch"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:versionCode="1"
	android:versionName="1.0">

	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.INTERNET" />

	<application
		android:allowBackup="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme">
		<activity
			android:name="fr.outadev.skinswitch.activities.MainActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name="fr.outadev.skinswitch.activities.MojangLoginActivity"
			android:label="@string/title_activity_mojang_login"
			android:theme="@style/DialogActivity"
			android:windowSoftInputMode="adjustResize|stateVisible">
		</activity>
		<activity
			android:name="fr.outadev.skinswitch.activities.NewCustomSkinActivity"
			android:label="@string/title_activity_new_custom_skin"
			android:parentActivityName="fr.outadev.skinswitch.activities.MainActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="fr.outadev.skinswitch.activities.MainActivity" />
		</activity>
		<activity
			android:name="fr.outadev.skinswitch.activities.SkinLibraryActivity"
			android:label="@string/title_activity_skin_library"
			android:parentActivityName="fr.outadev.skinswitch.activities.MainActivity">
			<meta-data
				android:name="android.app.default_searchable"
				android:value="fr.outadev.skinswitch.activities.LibrarySearchActivity" />
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="fr.outadev.skinswitch.activities.MainActivity" />

			<intent-filter>
				<action android:name="android.intent.action.SEARCH" />
			</intent-filter>
		</activity>
		<activity
			android:name="fr.outadev.skinswitch.activities.LibrarySearchActivity"
			android:label="Search"
			android:parentActivityName="fr.outadev.skinswitch.activities.SkinLibraryActivity">
			<intent-filter>
				<action android:name="android.intent.action.SEARCH" />
			</intent-filter>

			<meta-data
				android:name="android.app.searchable"
				android:resource="@xml/searchable" />
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="fr.outadev.skinswitch.activities.SkinLibraryActivity" />
		</activity>
	</application>

</manifest>