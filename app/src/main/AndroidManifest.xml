<?xml version="1.0" encoding="utf-8"?>
<manifest
	package="fr.outadev.skinswitch"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools">

	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.INTERNET" />

	<uses-sdk
		tools:node="replace" />

	<application
		android:allowBackup="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme">
		<meta-data
			android:name="com.google.android.gms.version"
			android:value="@integer/google_play_services_version" />

		<activity
			android:name=".MainActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name=".network.login.MojangLoginActivity"
			android:label="@string/title_activity_mojang_login"
			android:theme="@style/DialogActivity"
			android:windowSoftInputMode="adjustResize|stateVisible">
		</activity>
		<activity
			android:name=".skinlist.DetailActivity"
			android:label="@string/skin_details_title"
			android:theme="@style/DetailTheme">
		</activity>
		<activity
			android:name=".skinlist.NewCustomSkinActivity"
			android:label="@string/title_activity_new_custom_skin">
		</activity>
		<activity
			android:name=".skinlibrary.SkinLibraryActivity"
			android:label="@string/title_activity_skin_library">
			<meta-data
				android:name="android.app.default_searchable"
				android:value="fr.outadev.skinswitch.activities.LibrarySearchActivity" />
			<intent-filter>
				<action android:name="android.intent.action.SEARCH" />
			</intent-filter>
		</activity>
		<activity
			android:name=".skinlibrary.LibrarySearchActivity"
			android:label="@string/search_title">
			<intent-filter>
				<action android:name="android.intent.action.SEARCH" />
			</intent-filter>

			<meta-data
				android:name="android.app.searchable"
				android:resource="@xml/searchable" />
		</activity>
		<activity
			android:name=".settings.SettingsActivity"
			android:label="@string/settings_title" />

		<service
			android:name=".WearListenerService">
			<intent-filter>
				<action android:name="com.google.android.gms.wearable.BIND_LISTENER" />
			</intent-filter>
		</service>
		<activity
			android:name="com.google.android.gms.ads.AdActivity"
			android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
	</application>

</manifest>