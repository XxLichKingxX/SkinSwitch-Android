<resources>

	<style name="Theme.SkinSwitch" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:navigationBarColor">@color/colorPrimaryDark</item>
		<item name="android:statusBarColor">@color/colorPrimaryDark</item>
	</style>

	<style name="Theme.SkinSwitch.Detail" parent="Theme.SkinSwitch">
		<item name="actionBarStyle">@style/Theme.SkinSwitch.ActionBar.Transparent</item>
		<item name="windowActionBarOverlay">false</item>
		<item name="android:windowContentTransitions">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowTranslucentStatus">true</item>
		<item name="android:windowTranslucentNavigation">true</item>
	</style>

	<style name="Theme.SkinSwitch.ActionBar.Transparent" parent="Widget.AppCompat.Light.ActionBar">
	<item name="background">@null</item>
		<item name="displayOptions">homeAsUp</item>
	</style>

	<style name="Theme.SkinSwitch.Dialog" parent="android:Theme.Material.Light.Dialog">
	<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

</resources>
