<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="SkinSwitchActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
		<item name="android:background">@color/colorPrimary</item>
	</style>

	<style name="DetailActionBar" parent="@style/SkinSwitchActionBar" />

	<style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
		<item name="android:actionBarStyle">@style/SkinSwitchActionBar</item>
	</style>

	<style name="AppTheme" parent="AppBaseTheme" />

	<style name="DialogActivity" parent="android:Theme.Holo.Light.Dialog" />

	<style name="LoginFormContainer">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">16dp</item>
	</style>

	<style name="DetailTheme" parent="AppTheme">
	<item name="android:actionBarStyle">@style/DetailActionBar</item>
		<item name="android:windowActionBarOverlay">false</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>

</resources>
