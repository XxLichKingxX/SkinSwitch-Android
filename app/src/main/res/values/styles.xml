<resources>

	<style name="SkinSwitchActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
	<item name="android:background">@color/colorPrimary</item>
	</style>

	<style name="AppTheme" parent="AppBaseTheme" />

	<style name="LoginFormContainer">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">16dp</item>
	</style>

	<style name="SkinLibraryCard">
		<item name="android:layout_width">match_parent</item>
	</style>

	<style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<!-- darker variant of colorPrimary (for status bar, contextual app bars) -->
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<!-- theme UI controls like checkboxes and text fields -->
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="DetailTheme" parent="AppBaseTheme">
		<item name="android:actionBarStyle">@style/DetailActionBar</item>
		<item name="android:windowActionBarOverlay">false</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>

	<style name="DialogActivity" parent="android:Theme.Holo.Light.Dialog">
	<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="DetailActionBar" parent="Widget.AppCompat.Light.ActionBar">
		<item name="android:background">@null</item>
		<item name="android:displayOptions">homeAsUp</item>
	</style>

	<style name="LibraryTheme" parent="AppTheme">
		<item name="android:actionBarStyle">@style/LibraryActionBar</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>

	<style name="LibraryActionBar" parent="SkinSwitchActionBar">
		<item name="android:windowContentOverlay">@null</item>
	</style>

	<style name="menu_labels_style">
		<item name="android:background">@drawable/fab_label_background</item>
		<item name="android:textColor">@android:color/white</item>
	</style>

</resources>
